doctype html
html(lang="cn")
  head
    block head
      title= title
      meta(charset='utf-8')
      meta(name='viewport', content='width=device-width, initial-scale=1')
      link(rel="stylesheet" href="https://cdn.staticfile.org/font-awesome/4.7.0/css/font-awesome.css")
      link(rel='stylesheet', href='/stylesheets/style.css')
      script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
      script(src='/javascripts/index.js')
  body
    header
      .container.top-header
        div Hi! 今天是:
          span#today null
        div
          i.fa.fa-id-badge
          span 欢迎访问梁福苹的个人博客
          if user || admin
            a(href='#')
              span= user || admin
            a(href='/logout')
              span 注销
          else
            a(href='/login')
              i.fa.fa-qq
              span 登录
            a(href='/signin')
              i.fa.fa-external-link
              span 注册
      nav(role="navigation")
        .container
          #nav-button
            i.fa.fa-bars
          #nav-search
            i.fa.fa-search
          ul.nav-catalog 
            li
              a(href='/') 
                i.fa.fa-home
                span 首页
            -var Li;
            each val, index in catalog
              if Li != val.list
                - Li = val.list 
                li.dropdown
                  a(href=`/articles?genre=${val.name}`)
                    if val.fontawsome
                      i.fa(class=val.fontawsome)
                    span= val.filter_name
                  ul.dropdown-menu
                    -var i=index+1;
                    while catalog[i] && catalog[i].list==Li
                      - var genre = catalog[i]
                      li
                        a(href=`/articles?genre=${genre.name}`)
                          if genre.fontawsome
                            i.fa(class=genre.fontawsome)
                          span= genre.filter_name
                          - i++
          form.search-bar(action="/search", method="") 
            div         
              input(type="text", name="searchValue",placeholder="搜索...")
              button.fa.fa-search(type="submit")
    .container
      block content
    footer
      .container
        ul
          li
            a(href='/about') About
          li
            a(href='/articles') 其他
          li
            a(href="/articles") 文章
        div
          span Copyright &nbsp;
          i.fa.fa-copyright 
          | &nbsp;by&nbsp;
          a(href="#") liangfuping

