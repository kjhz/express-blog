extends layout

block content
  h1 #{title}

  form(method="POST" action="")
    div
      label(for='name') 种类名(英文):
      input#name(type='text', placeholder="log,life..." name="name" value=(genre===undefined ? '' : genre.nameEN))
    div
      label(for='nameCN') 种类名(中文):
      input#nameCN(type='text', placeholder="日志，生活。。。" name="nameCN" value=(genre===undefined ? '' : genre.nameCN))
    button(type='submit') 提交
  if confirm
    p #{confirm}
  if errors
    ul
      for error in errors
        li!= error.msg